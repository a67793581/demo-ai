# AI Animation Platform Environment Configuration
# Copy this file to .env and modify values as needed

# Task Processing Configuration
TASK_PROCESSING_TIME=3
SUCCESS_RATE=0.8
OCR_FAILURE_RATE=0.1
PROMPT_FAILURE_RATE=0.05
VIDEO_FAILURE_RATE=0.15

# MongoDB Configuration
MONGO_URI=mongodb://admin:password@mongodb:27017/
MONGO_DATABASE=ai_animation
MONGO_COLLECTION=tasks
STORAGE_FILE=task_storage.json
CONNECTION_TIMEOUT=5000

# API Configuration
API_PREFIX=/ai-animation
TASK_ID_SEPARATOR=_
TASK_ID_SUFFIX_LENGTH=8

# Application Configuration
APP_TITLE=AI Animation Platform
APP_VERSION=1.0.0
STATIC_DIR=static
TEMPLATES_DIR=templates
HEALTH_STATUS=healthy
SERVICE_NAME=AI Animation Platform

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Video Configuration
VIDEO_URL_TEMPLATE=https://web:8000/static/generated-video-{video_id}.mp4

# Error Messages
ERROR_AI_SERVICE_UNAVAILABLE=AI service temporarily unavailable
ERROR_OCR_FAILED=OCR recognition failed: image quality too low or format not supported
ERROR_PROMPT_FAILED=Prompt generation failed: input contains sensitive content
ERROR_VIDEO_FAILED=Video generation failed: insufficient server resources, please try again later

# Task Messages
TASK_SUCCESS_MESSAGE=Task completed successfully

